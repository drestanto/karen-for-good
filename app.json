{
  "expo": {
    "name": "karen-for-good",
    "slug": "karen-for-good",
    "version": "1.4.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "karenforgood",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "usesIcloudStorage": false,
      "supportsTablet": true,
      "bundleIdentifier": "com.yourname.karenforgood"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "POST_NOTIFICATIONS"  // optional for Android 13+
      ],
      "package": "com.drestanto.karenforgood"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "030ebfaf-05bb-457f-8161-54a682ed2ff1"
      }
    }
  }
}
